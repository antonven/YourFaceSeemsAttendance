<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame3"
    android:background="@color/ampm_text_color"
    tools:context="myapps.wycoco.com.yourfaceseemsattendance.AddSubjectFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/subjectName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/timeLabel"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/timeLabel"
            android:layout_toRightOf="@+id/timeLabel"
            android:background="@color/tw__composer_white"
            android:ems="10"
            android:hint="Name of Subject"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/timeLabel"
            android:layout_toEndOf="@+id/subjectTimeStart"
            android:layout_toRightOf="@+id/subjectTimeStart"
            android:text="Add subject"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/subjectRoom"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/tw__composer_white"
            android:ems="10"
            android:hint="Room No."
            android:inputType="textPersonName"
            android:layout_below="@+id/subjectName"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3"
            android:layout_marginTop="41dp" />

        <EditText
            android:id="@+id/subjectDate"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/subjectRoom"
            android:layout_alignBottom="@+id/subjectRoom"
            android:layout_alignEnd="@+id/subjectTimeEnd"
            android:layout_alignRight="@+id/subjectTimeEnd"
            android:background="@color/tw__composer_white"
            android:ems="10"
            android:hint="Date"
            android:inputType="date" />

        <EditText
            android:id="@+id/subjectTimeStart"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/tw__composer_white"
            android:ems="10"
            android:hint="Time Start"
            android:inputType="time"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/addSubjectBtn"
            android:layout_toStartOf="@+id/addSubjectBtn" />

        <EditText
            android:id="@+id/subjectTimeEnd"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/tw__composer_white"
            android:ems="10"
            android:hint="Time End"
            android:inputType="time"
            android:layout_alignBaseline="@+id/subjectTimeStart"
            android:layout_alignBottom="@+id/subjectTimeStart"
            android:layout_alignRight="@+id/subjectKey"
            android:layout_alignEnd="@+id/subjectKey"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/timeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:text="To"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/subjectKey"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@color/tw__composer_white"
            android:ems="10"
            android:hint="Enrollment Key"
            android:inputType="textPassword"
            android:layout_above="@+id/addSubjectBtn"
            android:layout_alignLeft="@+id/subjectTimeStart"
            android:layout_alignStart="@+id/subjectTimeStart"
            android:layout_marginBottom="23dp" />

        <Button
            android:id="@+id/addSubjectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="43dp"
            android:text="Add Subject" />

    </RelativeLayout>

</FrameLayout>

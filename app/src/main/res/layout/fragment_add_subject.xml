<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ampm_text_color"
    tools:context="myapps.wycoco.com.yourfaceseemsattendance.AddSubjectFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/subjectName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="27dp"
        android:background="@color/tw__composer_white"
        android:ems="10"
        android:hint="Name of Subject"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="35dp"
        android:text="Add subject"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/subjectRoom"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="27dp"
        android:background="@color/tw__composer_white"
        android:ems="10"
        android:hint="Room No."
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjectName"
        app:layout_constraintRight_toLeftOf="@+id/subjectDate"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/subjectDate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@color/tw__composer_white"
        android:ems="10"
        android:hint="Date"
        android:inputType="date"
        android:layout_marginRight="42dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/subjectName" />

    <EditText
    android:id="@+id/subjectTimeStart"
    android:layout_width="100dp"
    android:layout_height="40dp"
    android:background="@color/tw__composer_white"
    android:ems="10"
    android:hint="Time Start"
    android:inputType="time"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/subjectRoom"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/timeLabel"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/subjectTimeEnd"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/tw__composer_white"
        android:ems="10"
        android:hint="Time End"
        android:inputType="time"
        android:layout_marginRight="42dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/subjectDate"
        app:layout_constraintLeft_toRightOf="@+id/timeLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/timeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="To"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/subjectRoom" />

    <EditText
        android:id="@+id/subjectKey"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@color/tw__composer_white"
        android:ems="10"
        android:hint="Enrollment Key"
        android:inputType="textPassword"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/timeLabel" />

    <Button
        android:id="@+id/addSubjectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="35dp"
        android:text="Add Subject"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjectKey" />

</android.support.constraint.ConstraintLayout>

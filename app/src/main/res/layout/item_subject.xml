<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myapps.wycoco.com.yourfaceseemsattendance.TeacherSubject">

    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:layout_height="85dp"
        android:layout_margin="5dp"
        android:padding="10dp"
        app:cardElevation="9dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:text="Name of Subject"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subjectTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subjectName"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:text="Teacher" />

            <TextView
                android:id="@+id/subjectRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subjectName"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_toRightOf="@+id/subjectTeacher"
                android:text="BCL 5" />

            <TextView
                android:id="@+id/subjectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/subjectName"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100dp"
                android:text="Friday"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/subjectTeacher"
                android:layout_alignLeft="@+id/subjectDate"
                android:layout_below="@+id/subjectDate"
                android:layout_toRightOf="@+id/subjectTeacher"
                android:text="8:00" />

            <TextView
                android:id="@+id/toLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/timeStart"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/timeStart"
                android:text="to" />

            <TextView
                android:id="@+id/timeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/subjectTeacher"
                android:layout_below="@+id/subjectDate"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/toLabel"
                android:text="8:00" />

            <TextView
                android:id="@+id/subjectKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subjectTeacher"
                android:layout_alignLeft="@+id/subjectTeacher"
                android:layout_marginTop="10px"
                android:text="Password" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
